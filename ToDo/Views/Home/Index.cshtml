@using ToDo.ViewModels
@model ToDoViewModel

@{
    ViewData["Title"] = "To Do List";
}

<div class="text-center">
    <h1 class="display-4">Welcome To My To Do List</h1>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Task Name</th>
            <th>Priority</th>
            <th>Due Date</th>
            <th>Completed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model.ToDoItems)
        {
            <tr>
                <td>@todo.Name</td>
                <td>@todo.Priority</td>
                <td>@todo.DueDate</td>
                <td>@todo.Completed</td>
            </tr>
        }
    </tbody>
</table>
