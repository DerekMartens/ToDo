@using ToDo.ViewModels
@model ToDoDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="text-center pt-5 pb-5">
    <h1 class="display-4">Details</h1>
</div>
<dl class="row">
    <dt>Name</dt>
    <dd>@Html.DisplayFor(model => model.ToDo.Name)</dd>

    <dt>Description</dt>
    <dd>@Html.DisplayFor(model => model.ToDo.Description)</dd>

    <dt>Priority</dt>
    <dd>@Html.DisplayFor(model => model.ToDo.Priority)</dd>

    <dt>Due Date</dt>
    <dd>@Html.DisplayFor(model => model.ToDo.DueDate)</dd>

    <dt>Completed</dt>
    <dd>
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" asp-for="@Model.ToDo.Completed" />
        </div>
    </dd>
</dl>
